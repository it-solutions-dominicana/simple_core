<table class="table table-striped table-inverse table-responsive">
  <thead class="thead-inverse">
    <tr>
      <th>Codigo</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Total</th>
      <th></th>
    </tr>
    </thead>
    <tbody>
      <%= simple_form_for :item do |f| %>
        <tr>
          <td scope="row"><%= f.input :barcode, label: false %></td>
          <td><%= f.input :description, label: false %></td>
          <td><%= f.input :amount, label: false %></td>
          <td><%= f.input :price, label: false %></td>
          <td><%= f.input :total, label: false %></td>
          <td></td>
        </tr>
      <% end %>
      <tr>
        <td scope="row"></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tbody>
</table>